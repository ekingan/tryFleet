<%= flash[:notice] %>
<table>
  <thead>
    <tr>
      <th>Shipment Date</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Value</th>
    </tr>
  </thead>
  <tbody>
    <% @shipments.each do |shipment| %>
      <tr>
        <td><%= shipment.datetime %></td>
        <td><%= shipment.origin %></td>
        <td><%= shipment.destination %></td>
        <td><%= shipment.shipment_value %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
<h3>Import a CSV File</h3>
  <%= form_tag import_shipments_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV" %>
  <% end %>
</div>