<%= flash[:notice] %>
<div class="container">
    <div class="panel">
      <h3>Import a CSV File</h3>
        <%= form_tag import_shipments_path, multipart: true do %>
          <%= file_field_tag :file %>
          <%= submit_tag "Import CSV" %>
        <% end %>
  </div>
</div>
<div class="container">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Shipment Date</th>
        <th>Origin</th>
        <th>Destination</th>
        <th>Value</th>
      </tr>
    </thead>
    <tbody>
      <% @shipments.each do |shipment| %>
        <tr>
          <td><%= shipment.datetime.to_formatted_s(:long_ordinal) %></td>
          <td><%= shipment.origin %></td>
          <td><%= shipment.destination %></td>
          <td><%= shipment.shipment_value %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
